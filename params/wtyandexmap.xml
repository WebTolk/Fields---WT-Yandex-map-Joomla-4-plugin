<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="fieldparams">
        <fieldset name="fieldparams">
            <field type="text"
                   name="map_center"
                   label="PLG_WTYANDEXMAP_PARAMS_MAP_CENTER_LABEL"
                   description="PLG_WTYANDEXMAP_PARAMS_MAP_CENTER_DESC"
                   default="51.533562, 46.034266"
                   hint="51.533562, 46.034266"/>
            <field type="list"
                   name="map_zoom"
                   label="PLG_WTYANDEXMAP_PARAMS_MAP_ZOOM_LABEL"
                   default="7"
                   filter="integer">
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
                <option value="13">13</option>
                <option value="14">14</option>
                <option value="15">15</option>
                <option value="16">16</option>
                <option value="17">17</option>
                <option value="18">18</option>
                <option value="19">19</option>
                <option value="20">20</option>
                <option value="21">21</option>
            </field>
            <field type="list"
                   name="map_type"
                   label="PLG_WTYANDEXMAP_PARAMS_MAP_TYPE_LABEL"
                   default="map">
                <option value="map">PLG_WTYANDEXMAP_PARAMS_MAP_TYPE_MAP</option>
                <option value="satellite">PLG_WTYANDEXMAP_PARAMS_MAP_TYPE_SATELLITE</option>
            </field>
            <field type="text"
                   name="map_width"
                   label="PLG_WTYANDEXMAP_PARAMS_MAP_WIDTH_LABEL"
                   description="PLG_WTYANDEXMAP_PARAMS_MAP_WIDTH_DESC"/>
            <field type="text"
                   name="map_height"
                   label="PLG_WTYANDEXMAP_PARAMS_MAP_HEIGHT_LABEL"
                   description="PLG_WTYANDEXMAP_PARAMS_MAP_HEIGHT_DESC"/>
            <field type="radio"
                   name="dont_show_in_category"
                   label="PLG_WTYANDEXMAP_PARAMS_DONT_SHOW_IN_CATEGORY_LABEL"
                   description="PLG_WTYANDEXMAP_PARAMS_DONT_SHOW_IN_CATEGORY_DESC"
                   default="0"
                   layout="joomla.form.field.radio.switcher"
                   filter="integer">
                <option value="0">JSHOW</option>
                <option value="1">JHIDE</option>
            </field>
            <field type="filelist"
                   name="marker_layout"
                   label="PLG_WTYANDEXMAP_PARAMS_MARKER_LAYOUT_LABEL"
                   description="PLG_WTYANDEXMAP_PARAMS_MARKER_LAYOUT_DESC"
                   directory="plugins/fields/wtyandexmap/tmpl/markers"
                   fileFilter="php"
                   default="default"
                   stripext="true"
                   hide_none="true"/>
            <field type="text"
                   name="marker_color"
                   label="PLG_WTYANDEXMAP_PARAMS_MARKER_COLOR_LABEL"
                   description ="PLG_WTYANDEXMAP_PARAMS_MARKER_COLOR_DESC"
                   default="red"
                   showon="marker_layout:"/>
        </fieldset>
    </fields>
</form>